<Window x:Class="NoteBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBook"
        mc:Ignorable="d"
        Title="IUT Notebook" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="1" Grid.Column="1" Source="carnet.png"/>
        <Button Grid.Column="0" Grid.Row="0" Content="Edit Units and modules" Margin="20" Click="GoEditUnits" />
        <Button Grid.Column="2" Grid.Row="0" Content="Edit exams" Margin="20" Click="GoEditExams" />
        <Button Grid.Column="1" Grid.Row="2" Content="Compute score" Margin="20" Click="GoListExams" />
    </Grid>
</Window>
